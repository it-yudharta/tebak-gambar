<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edukasi.game.MainActivity"
    android:background="@drawable/menu">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icoplay"
        android:id="@+id/imgBtnPlay"
        android:scrollbarDefaultDelayBeforeFade="200"
        android:scrollbarFadeDuration="150"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icooption"
        android:id="@+id/imgBtnOption"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:background="#00000000"
        android:layout_marginTop="26dp"
        android:layout_alignTop="@+id/imgBtnHelp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icohelp"
        android:id="@+id/imgBtnHelp"
        android:background="#00000000"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icoexit"
        android:id="@+id/imgBtnExit"
        android:background="#00000000"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imgBtnOption"
        android:layout_alignRight="@+id/imgBtnHelp"
        android:layout_alignEnd="@+id/imgBtnHelp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icoabout"
        android:id="@+id/imgBtnAbout"
        android:background="#00000000"
        android:layout_marginTop="47dp"
        android:layout_alignTop="@+id/imgBtnExit"
        android:layout_toLeftOf="@+id/imgBtnPlay"
        android:layout_toStartOf="@+id/imgBtnPlay" />

</RelativeLayout>
